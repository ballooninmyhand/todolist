/* pages/index/index.wxss */
page {
  background-color: #f0ebeb;
}

.add-todo {
  display: flex;
  width: 695rpx;
  margin: 13rpx;
  background-color: #fff;
  border-radius: 5px;
  padding: 13rpx;
}

.add-image {
  width: 30rpx;
  height: 30rpx;
  margin: 13rpx;
}

.add-input {
  width: 600rpx;
  margin: 6rpx 14rpx;
  padding-left: 10rpx;
}

.jiantou-image {
  width: 50rpx;
  height: 50rpx;
  margin: 5rpx 10rpx;
}

.todo-list {
  width: 720rpx;
  margin: 35rpx 13rpx;
  background-color: #fff;
  border-radius: 5px;
}

.todo-item {
  display: flex;
  padding: 22rpx;
  border-bottom: 1rpx solid #f0ebeb;
}

.todo-checkbox {
  transform: scale(0.8, 0.8);
}

.item {
  display: flex;
}

.item-title {
  display: inline-block;
  width: 400rpx;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-date {
  display: inline-block;
  width: 230rpx;
  font-size: 24rpx;
  color: #ccc;
  line-height: 50rpx;
  text-align: right;
}

.no-data {
  width: 695rpx;
  margin: 50rpx 13rpx;
  text-align: center;
  font-style: italic;
  color: #bcb5b5;
}